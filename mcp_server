#!/usr/bin/env python3
"""
Executable MCP server script.
This should be called by MCP clients to start the stdio server.
"""

import sys
import asyncio
from pathlib import Path

# Add current directory to path for imports
sys.path.insert(0, str(Path(__file__).parent))

from mcp_stdio_server_fixed import main

if __name__ == "__main__":
    asyncio.run(main())